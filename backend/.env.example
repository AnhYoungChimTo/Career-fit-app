# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (local dev)
DATABASE_URL=postgresql://career_fit_user:your_password@localhost:5432/career_fit
# DIRECT_URL is the same as DATABASE_URL for local dev
# In production (Supabase), DATABASE_URL = pooler URL, DIRECT_URL = direct connection URL
DIRECT_URL=postgresql://career_fit_user:your_password@localhost:5432/career_fit

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-min-32-characters-long
JWT_EXPIRES_IN=7d

# OpenAI Configuration (for GPT-4 integration)
OPENAI_API_KEY=sk-your-openai-api-key-here
GPT_ANALYSIS_MODEL=gpt-4o

# CORS Configuration (set to your Vercel frontend URL in production)
CORS_ORIGIN=http://localhost:5173
